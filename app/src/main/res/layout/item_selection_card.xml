<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    >

    <LinearLayout
        android:id="@+id/llSelectedHolder"
        android:layout_width="380dp"
        android:layout_height="120dp"
        android:background="@drawable/selection_card_outer"
        android:orientation="horizontal"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="18dp"
        >

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >

            <ImageView
                android:id="@+id/ivCandidatePhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/selection_card_outer"
                android:scaleType="fitXY"
                android:src="@drawable/iconing" />

        </LinearLayout>


        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="260dp"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            >
            <TextView
                android:id="@+id/rvCandidatesName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Name:"
                android:textColor="@color/smoke"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                />
            <TextView
                android:id="@+id/rvCandidatesParty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Party:"
                android:textColor="@color/smoke"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>
            <TextView
                android:id="@+id/rvCandidatesArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Area:"
                android:textColor="@color/smoke"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>
            <TextView
                android:id="@+id/rvCandidatesId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Id:"
                android:textColor="@color/smoke"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"/>



        </LinearLayout>


    </LinearLayout>






</LinearLayout>